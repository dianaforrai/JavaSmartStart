<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Fleet via Constructor Injection -->
    <bean id="fleetConstructor" class="com.glo.Fleet">
        <constructor-arg value="5"/>
        <constructor-arg value="Logistics Fleet A"/>
    </bean>

    <!-- Fleet via Setter Injection -->
    <bean id="fleetSetter" class="com.glo.Fleet">
        <property name="fleetCount" value="3"/>
        <property name="fleetName" value="Logistics Fleet B"/>
    </bean>

    <!-- Freight via Constructor Injection -->
    <bean id="freight" class="com.glo.Freight">
        <constructor-arg value="Heavy Cargo"/>
        <constructor-arg value="1500.0"/>
    </bean>

</beans>
