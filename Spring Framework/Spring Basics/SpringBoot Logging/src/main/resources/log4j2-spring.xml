<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- Uppercase level, file name, line number -->
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level{upperCase=true}] [%t] %c - (%F:%L) %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Package-specific level -->
        <Logger name="com.glo.freightServices" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger -->
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
